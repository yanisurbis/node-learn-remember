      $.ajax({
        type: "POST",
        url: "/personjson",
        data: JSON.stringify({
          firstname: 'Jane',
          lastname: 'Doe'
        }),
        dataType: 'json',
        contentType: 'application/json'
      })
    </script>
  </body>
